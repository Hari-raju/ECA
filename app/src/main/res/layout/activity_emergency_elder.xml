<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.caretakers.EmergencyElderActivity">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/elderProfile_emg"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/round_bg"
        android:elevation="@dimen/_20sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/elderProfile_emg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Elder Name"
            android:textColor="@color/myBlue"
            android:textSize="@dimen/_18ssp"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/elderName_emg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="XX/XX/XXXX"
            android:textColor="@color/grey"
            android:textSize="@dimen/_14ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/elderPhone_emg"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/grey"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Message :"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:text=""
            android:layout_marginStart="@dimen/_10sdp"
            android:textAlignment="textStart"
            android:id="@+id/emg_msg"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/grey"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elder Last Address"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:text=""
            android:layout_marginStart="@dimen/_10sdp"
            android:textAlignment="textStart"
            android:id="@+id/lastAddress"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>